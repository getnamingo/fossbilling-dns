{{ product_details }}

<div class="mb-3">
  <label class="form-label" for="domain_name">{{ 'Domain name'|trans }}</label>
  <input
    class="form-control"
    type="text"
    id="domain_name"
    name="domain_name"
    placeholder="example.com"
    required
    autocomplete="off"
    autocapitalize="off"
  >
  <div class="form-hint">
    {{ 'Enter the domain you want to manage DNS for. Example: example.com'|trans }}
  </div>
</div>

<div class="card text-white bg-info mb-3">
  <div class="card-header"><h5 class="card-title">Nameserver Setup</h5></div>
  <div class="card-body">
    <p class="card-text">Please update your domainâ€™s nameserver settings at your domain registrar to the following:</p>
    <ul>
      {% for i in 1..5 %}
        {% set key = 'ns' ~ i %}
        {% if product.config[key] is defined and product.config[key] %}
          <li>{{ product.config[key] }}</li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<input type="hidden" name="id" value="{{ product.id }}"/>
<input type="hidden" name="action" value="register" id="dns-action"/>